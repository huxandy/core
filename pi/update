#!/bin/bash
export DEBIAN_FRONTEND=noninteractive
/show/isConnected

/show/messagebox "Update everything"
/show/console

/show/messagebox "Update Applications with apt-get"
#Update package
apt-get -q -y update
apt-get -q -y upgrade

/show/messagebox "Update firmware with rpi-update"
#Update firmware
/system/install rpi-update
rpi-update

/show/messagebox "Update PiGet with git"
#Update Piget modules
/system/PiGetUpdate

/show/messagebox "Update wiringPi with git"
#Upgrade WiringPi (if installed)
git --work-tree=/opt/wiringPi --git-dir=/opt/wiringPi/.git pull origin master