#!/bin/bash
r=$(tput setaf 1)
n=$(tput sgr 0)
w=$(tput bold)
g=$(tput setaf 2)

# To remove colors just find/replace
# 3.3V 3.3V
# ${w}GND${n} ${w}GND${n}


cat<<EOF
+-----------+
+    leds   +
+  ${r}coɔ${n}  ${g}coɔ${n} +
+-----+-----+
|${r}3.3V${n} | ${r}5v${n}  |
|   2 | 5v  |
|   3 | ${w}GND${n} |
|   4 | 14  |
| ${w}GND${n} | 15  |
|  17 | 18  |
|  27 | ${w}GND${n} |
|  22 | 23  |
| ${w}GND${n} | 24  |
|  10 | ${w}GND${n} |
|   9 | 25  |
|  11 | 8   |
| ${w}GND${n} | 7   |  
|   0 | 1   |
|   5 | ${w}GND${n} |
|   6 | 12  |
|  13 | ${w}GND${n} |
|  19 | 16  |
| 26  | 20  |
| ${w}GND${n} | 21  |
+-----------+
+    ${g}USB${n}    +
+-----+-----+

EOF
